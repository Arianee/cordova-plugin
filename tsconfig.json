{
  "compilerOptions": {
    "target": "es5",
    "sourceMap": true,
    "allowJs": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "esModuleInterop": true,
    "lib": ["dom", "es5"],
    "types": ["cordova"]
  },
  "include": ["src/**/*", "types/**/*"],
  "exclude": ["node_modules"]
}
